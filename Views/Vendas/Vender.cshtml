@model IEnumerable<FazendaUrbana.Models.ProdutoModel>

@{
    ViewBag.Title = "Realizar Venda";
}
<div class="text-center">

    <h1 class="display-4">Realizar nova venda</h1>

</div>

<form asp-controller="Vendas" asp-action="Vender" method="post">
    <div class="form-group">
        <label for="produtoId">Produto</label>
        <select id="produtoId" name="produtoId" class="form-control" required>
            <option value="">Selecione um produto</option>
            @foreach (var produto in Model)
            {
                <option value="@produto.Id">@produto.Nome - Estoque: @produto.Quantidade</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="number" id="quantidade" name="quantidade" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label for="desconto">Desconto (opcional)</label>
        <input type="text" id="desconto" name="desconto" class="form-control" placeholder="0,00" />
    </div>

    <div class="form-group">
        <label for="imposto">Imposto (%)</label>
        <input type="text" id="imposto" name="imposto" class="form-control" placeholder="0,00" />
    </div>

    <button type="submit" class="btn btn-primary">Realizar Venda</button>
</form>
