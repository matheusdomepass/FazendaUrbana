@model FazendaUrbana.Models.VendasModel

@{
    ViewData["Title"] = "Realizar Venda";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-controller="Vendas" asp-action="Vender">
    <div class="form-group">
        <label for="ProdutoId">Produto</label>
        <select id="ProdutoId" name="ProdutoId" class="form-control">
            @foreach (var produto in ViewBag.Produtos)
            {
                <option value="@produto.Id">@produto.Nome - @produto.Valor.ToString("C")</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Quantidade">Quantidade</label>
        <input type="number" id="Quantidade" name="Quantidade" class="form-control" required min="1" />
    </div>

    <div class="form-group">
        <label for="ClienteId">Cliente</label>
        <input type="number" id="ClienteId" name="ClienteId" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Usuario">Usuário</label>
        <input type="text" id="Usuario" name="Usuario" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Realizar Venda</button>
</form>
