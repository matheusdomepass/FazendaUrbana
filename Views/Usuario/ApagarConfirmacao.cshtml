@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}

<div class="text-center">
    <h3>Deseja apagar o usuário (@Model.Nome)</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Usuario" role="button">Cancelar</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id" role="button">Confirmar</a>